<div class="banner banner_show" style="background-image: url('<%= cl_image_path @car.photo %>')">
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h1><%= @car.brand %></h1>
      <h2><%= @car.model %></h2>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div
        id="map"
        style="width: 100%;
        height: 250px;"
        data-markers="<%= @markers.to_json %>"
        >
      </div>
    </div>
  </div>
  <hr>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h4>Description</h4>
      <p><%= @car.description %></p></br>
      <h4>Owner</h4>
      <p><%= @car.user.first_name %></p></br>
      <h4>Reviews :car.booking.rating</h4>
      <p>@booking.review </p>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="card_booking">
        <p><%= @car.price %> â‚¬/day</p>
        <div class="form-group text-center">
          <%= form_tag(car_bookings_path(@car), method: :post) do %>
            <b>Beginning:</b>
            <%= date_field(:booking, "start_date", min: Date.today) %>
            <b>End:</b>
            <%= date_field(:booking, "end_date", min: Date.today) %>
          <%= submit_tag ("Drive a car"), class: 'btn btn-primary btn_book' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <i class="fas fa-chevron-left" aria-hidden="true">
        <%= link_to "Back to selection", cars_path, class: "link" %>
    </i>
  </div>
</div>

<div class="btn-align">
      <% if policy(@car).edit? %>
        <%= link_to "edit your car", edit_car_path(@car.id), id:"submit-btn" %>
      <% end %>
          <% if policy(@car).destroy? %>
          <div class="delete-form">
            <%= simple_form_for @car, method: :delete do |f| %>
              <%= f.submit "delete your car", id: "delete-btn" %>
            <% end %>
          <% end %>
      </div>
</div>
