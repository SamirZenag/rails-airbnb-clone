<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li id="home-title" role="presentation" class="active"><a id="home-title-design" class="tab"  href="#home" aria-controls="home" role="tab" data-toggle="tab">My listings</a></li>
    <li id="profile-title" role="presentation"><a id="profile-title-design"  class="tab" href="#profile" aria-controls="profile" role="tab" data-toggle="tab">My bookings</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
      <div class="container">
          <div class="row">
           <% @cars.each do |car|%>
             <div class="col-xs-12 col-md-6 col-lg-4">
               <div class="dashboard-listings-card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.3)), url(<%= car.picture %>);">
              <%= link_to car_path(car) do %>
                 <h3> <%= car.name %> </h3>
              <% end %>
              <%= link_to edit_car_path(car), class: "edit-icon" do %>
                 <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to car_path(car), class: "trash-icon", method: :delete, data: {confirm:"Are you sure ?"} do %>
                 <i class="fas fa-trash"></i>
              <% end %>
                </div>
             </div>
            <%end%>
            <div class="col-xs-12 col-md-6 col-lg-4">
              <div class="dashboard-add-card hvr-grow">
               <%= link_to new_car_path, class: "edit-icon-circle" do %>
               <h3><i class="fas fa-plus"></i> Add a new car</h3>
               <% end %>
              </div>
            </div>
          </div>
      </div>
    </div>

    <div role="tabpanel" class="tab-pane" id="profile">


      <div class="container">
        <div class="row">
          <% @bookings.each do |booking|%>
            <div class="col-xs-12 col-md-12 col-lg-12">
              <div class="message animated pulse" >
                <div class="message-name">
                  <h3><strong> Dates :</strong></h3>
                  <p><%= booking.start_date%></p>
                  <p><%= booking.end_date%></p>
                </div>
                <div class="message-body">
                  <p><strong>Booking details</strong></p>
                  <p> your <%=booking.car.name%> is booked ! Enjoy</p>
                </div>
                <div class="message-status">
                  <p class="price"><%= booking.price %>EUR</p>
                </div>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
